generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource pg {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role     @default(user)
  password  String
  email     String   @unique
  dob       DateTime
  createdAt DateTime @default(now())
}

enum Role {
  user
  admin
}
