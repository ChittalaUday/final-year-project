generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource pg {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  user
  admin
}

enum ComparisonStatus {
  PENDING
  COMPLETED
  FAILED
}

// Core User Model
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(user)
  dob       DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile            Profile?
  careerPredictions  CareerPrediction[]
  imageComparisons   ImageComparison[]
  skills             UserScill[]
}

// Extended User Profile
model Profile {
  id          Int      @id @default(autoincrement())
  bio         String?
  avatarUrl   String?
  githubUrl   String?
  linkedinUrl String?
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Skill Management
model Skill {
  id    Int         @id @default(autoincrement())
  name  String      @unique
  users UserScill[]
}

model UserScill {
  id        Int      @id @default(autoincrement())
  userId    Int
  skillId   Int
  user      User     @relation(fields: [userId], references: [id])
  skill     Skill    @relation(fields: [skillId], references: [id])
  assignedAt DateTime @default(now())

  @@unique([userId, skillId])
}

// History of Career Recommendations
model CareerPrediction {
  id              Int      @id @default(autoincrement())
  inputData       Json     // Store the academic/interest parameters sent to ML
  predictionResult Json    // Store the raw result from ML service
  createdAt       DateTime @default(now())
  
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
}

// History of CLIP Image Comparisons
model ImageComparison {
  id              Int              @id @default(autoincrement())
  image1Url       String
  image2Url       String
  tag             String?
  similarityScore Float?
  status          ComparisonStatus @default(PENDING)
  resultData      Json?            // Full detailed response from ML
  createdAt       DateTime         @default(now())
  
  userId          Int
  user            User             @relation(fields: [userId], references: [id])
}
